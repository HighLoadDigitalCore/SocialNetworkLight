@{
    ViewBag.Title = "CityLove - Список городов";
    Layout = "~/Views/Shared/InnerPage.cshtml";
    ViewBag.ContentCSS = "";
    ViewBag.SidebarCSS = "sidebar-reg";
    ViewBag.ContentWrapCSS = "content-wrap-reg";
}
@using SexiLove.Extensions
@model IList<SexiLove.Models.Town>
<header class="content-header row">
    <span class="icon icon-reg"></span>
    <ol class="list-unstyled breadcrumb" style="width: auto">
        <li style="float: right">
            <a style="font-weight: bold" href="@Url.Action("EditTown")">Добавить город</a>
        </li>
    </ol>
</header>
<table width="100%" class="tbl">
    <tr>
        <th>Название</th>
        <th></th>
    </tr>
    @foreach (var town in Model)
    {
        <tr>
            <td>
                <a href="@Url.Action("EditTown", "Admin", new{ ID = town.ID })">@town.Name</a>
            </td>
            <td>
                <a href="@Url.Action("DeleteTown", "Admin", new { ID = town.ID })">удалить</a>
            </td>
        </tr>
    }
</table>



@section sidebar
{
    @Html.Action("LeftMenu", "Cabinet")
}
